<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Transaction name' %>
    <%= f.input :amount, placeholder: "0,00 â‚¬" %>
    <%= f.input :kind, label: 'Transaction Type', as: :select, collection: ['Expense', 'Income'] %>
    <%= f.input :category, as: :select, collection: ['Food',
     'Health',
     'Entertainment',
     'Travel',
     'Personal Care',
     'Education',
     'Utilities',
     'Salary',
     'Investments',
     'Rental Income',
     'Freelance',
     'Other...'],
                   prompt: 'Select a Category'%>
    <%= f.input :frequency, as: :select, collection: ['One-Time', 'Weekly', 'Monthly'],
                          placeholder: 'One-time, Weekly, Monthly' %>
    <%= f.input :group_id, as: :select, collection: current_user.groups,
                   prompt: 'Select Group'%>
    <div class="form-actions d-flex justify-content-between mt-4">
      <div class="d-flex align-items-center">
        <%= link_to "Cancel", transactions_path, class: "btn btn-danger" %>
      </div>
      <div>
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
