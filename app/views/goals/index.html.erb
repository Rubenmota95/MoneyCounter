<div class="container">
  <h1 class="text-center mt-4 mb-4">My Goals</h1>

  <% if @goals.count >= 10 %>
    <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <%= form_tag(goals_path, method: :get, class: "simple_form search") do %>
          <div class="search-form-control form-group">
            <div class="input-group">
              <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: 'Search goals...', style: "border-radius: .5em 0 0 .5em;") %>
              <button class="btn btn-flat rounded-end" type="submit" style="border-radius: 0 .5em .5em 0;">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        <% end %>
    </div>
    </div>
  <% end %>

  <% if @goals.empty? %>
    <h5>You haven't setted any goal!</h5>
    <%= link_to "Set your first goal now!", new_goal_path, class: "btn btn-flat" %>
  <% else %>
    <% if @favorite_array.empty? %>
      <%= render "/shared/no_favorite_goal" %>
    <% else %>
      <%= render "/shared/favorite_goal" %>
    <% end %>
  <% end %>
  </div>
</div>
