<%= simple_form_for(@goal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Goal name' %>

    <%= f.input :category, as: :select, collection: ['Product',
     'Financial'],
                   prompt: 'Select Category'%>
    <%= f.input :url, placeholder: 'Amazon URL' %>
    <%= f.input :photos, as: :file %>
    <%= f.input :amount, placeholder: "0,00 â‚¬" %>
    <div class="form-actions d-flex justify-content-between mt-4">
      <div class="d-flex align-items-center">
        <%= link_to "Cancel", goals_path, class: "btn btn-danger" %>
      </div>
      <div>
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
