<%= simple_form_for(@goal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Goal name', input_html: { class: 'rounded-boxes' } %>
    <%= f.input :category, as: :select, collection: ['Product', 'Financial'], prompt: 'Select Category', input_html: { class: 'rounded-boxes' } %>
    <%= f.input :photo, as: :file, input_html: { class: 'rounded-boxes' } %>
    <%= f.input :amount, placeholder: "0,00 â‚¬", input_html: { class: 'rounded-boxes' } %>
    <div class="form-actions d-flex justify-content-between mt-4">
      <div class="d-flex align-items-center">
        <%= link_to "Cancel", goals_path, class: "ms-3 btn btn-flat-cancel" %>
      </div>
      <div>
        <%= f.button :submit, class: "btn btn-flat" %>
      </div>
    </div>
  </div>
<% end %>
