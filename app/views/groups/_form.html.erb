<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Group name' %>
<%= f.input :user_ids, label:"Usernames", collection: User.where.not(id: current_user.id).pluck(:username, :id), input_html: { multiple: true, class: "multiple-select", data: { controller: "tom-select", tom_select_options_value: { tags: true } } }, wrapper_html: { data: { allow_clear: true } } %>
    <div class="form-actions d-flex justify-content-between mt-4">
      <div class="d-flex align-items-center">
        <%= link_to "Cancel", groups_path, class: "btn btn-danger" %>
      </div>
      <div>
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
